script.on_event(defines.events.on_player_created, function(event)
  local player = game.get_player(event.player_index)

  local controller = state_util.create_controller()

  local player_state = state_util.create_state(controller, {
    player = player,
    age = 100,
  })

  local state = state_util.create_state(controller, {
    number = 0,
    list = state_util.create_state(controller, {
      state_util.create_state(controller, {number = 3}),
      state_util.create_state(controller, {number = 5}),
    }),
  })

  local inst = gui.create(player.gui.screen, {
    class = "foo",
    controller = controller,
    player_state = player_state,
    state = state,
  })

  state.list[2] = state_util.create_state(controller, {number = 10})
  state.list[2], state.list[1] = state.list[1], state.list[2]
  inst:draw()

  state_util.insert(state.list, 1, state_util.create_state(controller, {number = 34}))
  inst:draw()
end)

